@{
    Layout = null;
}

@model Vault.Controllers.LoginController

<div>
    <b style="font-size: 18px;">Name:</b>
    <br>
    <div style="font-size: 23px;overflow: hidden;height: 26px;width: 99%;">
        @System.Net.WebUtility.HtmlDecode(ViewBag.User.Name)
        
        <img src="images/pencil.svg" style="
            height:15px;
            cursor:pointer;
            filter: invert(0.6);" 
            onclick="processChangeName('@ViewBag.User.Name')" />
    </div>

    <br>

    <b style="font-size:18px;">Password:</b><br>
    <em style="font-size:14px;">••••••••••</em>
    <img src="images/pencil.svg" style="
        height:15px;
        cursor:pointer;
        filter: invert(0.6);" 
        onclick="processChangePassword()" />

    <br><br>

    <b style="font-size:18px;">Storage:</b><br>
    <em style="font-size:14px;">@ViewBag.Storage</em>

    <br><br>

    <b style="font-size:18px;">API Key:</b><br>

    @if (ViewBag.User.APIKey.Length > 0)
    {
        <em style="font-size:12px;">@ViewBag.User.APIKey</em>
        <img src="images/sharex.svg" style="height:15px;margin-bottom:-2px;margin-left:5px;cursor:pointer;"
             onclick="downloadShareX('@ViewBag.User.APIKey')" />
    }
    else
    {
        <em style="font-size:25px;" id="api-key">-</em><br>
    }

    <hr style="margin-bottom: 30px;">
    <p>You can update your settings from here:</p><br />
    <a onclick="toggleDarkMode()" style="cursor:pointer;" class="btn black">Toggle Darkmode</a>
    <a onclick="toggleAPI()" style="cursor:pointer;" class="btn black">Toggle API</a>
</div>
